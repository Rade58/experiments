{
  "compilerOptions": {
    // Emit control
    "noEmit": true, // ✅ Root doesn't emit files
    // Module system
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    // Strictness
    "noImplicitAny": true,
    "strict": true,
    // Compatibility
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    // New feature (TS 5.7+)
    "noUncheckedSideEffectImports": true // ✅ No trailing comma!
  },
  "include": [
    "eslint.config.mts"
  ],
  "exclude": [
    "node_modules",
    "dist"
    // "**/assets/**/*",
  ]
}