{
  "name": "lab",
  "version": "0.0.1",
  "private": true,
  "description": "Monorepo of my personal projects and experiments",
  "scripts": {
    "dev": "pnpm run -r --parallel dev",
    "de": "concurrently -n \"Habits\" -c \"green\" \"pnpm --filter @lab/habits dev\"",
    "build": "pnpm --color run -r build",
    "lint": "pnpm --color run -r lint",
    "test": "pnpm --color run -r test",
    "check": "pnpm --color run -r check",
    "format": "prettier --write packages/*/{src,tests}/**/*.{ts,svelte} packages/*/{tailwind.config.js,postcss.config.cjs,vite.config.ts,svelte.config.js}"
  },
  "license": "ISC",
  "packageManager": "pnpm@10.25.0",
  "volta": {
    "node": "24.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@manypkg/cli": "^0.25.1",
    "@types/node": "^25.0.2",
    "@vitest/ui": "^4.0.15",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "knip": "^5.73.4",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "syncpack": "^13.0.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  }
}